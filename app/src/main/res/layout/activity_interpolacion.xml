<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="19dp"></FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:textSize="25dp"
        android:textAlignment="center"
        android:text="Método de Interpolación"/>

    <Button
        android:id="@+id/boton_resuelve"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:text="Resolver" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="19dp">

    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="402dp"
        android:scrollbars = "vertical"
        android:scrollbarStyle="insideInset">
        <LinearLayout
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableLayout
                android:id="@+id/table"
                android:layout_width="match_parent"
                android:layout_height="441dp"
                android:textAlignment="center"></TableLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="231dp"
            android:layout_height="match_parent"
            android:textSize="22dp"
            android:gravity="right"
            android:text="Cantidad de datos: "/>

        <EditText
            android:id="@+id/edit_size"
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:text="2"
            android:textAlignment="center"
            android:inputType="number"/>

        <Button
            android:id="@+id/boton_generar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Generar"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"></FrameLayout>
    <Button
        android:id="@+id/boton_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Menú" />

</LinearLayout>